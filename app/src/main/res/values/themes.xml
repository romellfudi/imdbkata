<resources>
    <!-- Base application theme. -->
    <style name="Theme.IMDBKATA" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_1</item>
        <item name="colorPrimaryVariant">@color/color_2</item>
        <item name="colorOnPrimary">@color/color_3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_4</item>
        <item name="colorSecondaryVariant">@color/color_5</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.IMDBKATA.NoActionBar"  parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/color_1</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>